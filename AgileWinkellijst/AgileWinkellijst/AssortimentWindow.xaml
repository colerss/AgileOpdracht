<Window x:Class="AgileWinkellijst.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgileWinkellijst"
        mc:Ignorable="d"
        Title="Artikellijst" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label x:Name="lblAssortiment" Content="Artikellijst" Grid.ColumnSpan="6" FontSize="40" HorizontalAlignment="Center" FontWeight="Bold"/>
        <DataGrid x:Name="dgArtikellijst" VerticalAlignment="Top" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="5" DataContext="{Binding Source=Product}"  AutoGenerateColumns="False" CanUserResizeColumns="True" Height="200" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naam" Binding="{Binding Path=Naam}" Width="280"/>
                <DataGridTextColumn Header="Hoeveelheid" Binding="{Binding Path=Hoeveelheid}" Width="250"/>
                <DataGridTextColumn Header="Prijs" Binding="{Binding Path=Prijs}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnNieuwArtikel" FontSize="20" Content="Nieuw Artikel" Margin="5" Grid.Row="4" Grid.ColumnSpan="6" Click="btnNieuwArtikel_Click"></Button>
        <Button x:Name="btnWinkellijst" FontSize="20" Content="Naar Winkellijst" Margin="5" Grid.Row="5" Grid.ColumnSpan="6" Click="btnWinkellijst_Click"></Button>
    </Grid>
</Window>
