<Window x:Class="AgileWinkellijst.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgileWinkellijst"
        mc:Ignorable="d"
        Title="Artikellijst" Height="600" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.8*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblAssortiment" Content="Artikellijst" Grid.ColumnSpan="6" FontSize="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold"/>
        <ScrollViewer Grid.Row="1" Margin="5" Grid.ColumnSpan="2" >
            <StackPanel>
                <Grid Height="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition  Width="0.5*" />
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.ColumnSpan="5" Fill="AliceBlue" Stroke="Black"></Rectangle>
                    <Label Grid.Column="0">Calve Pindakaas</Label>
                    <Label Grid.Column="1">500g</Label>
                    <Label Grid.Column="2">€3.50</Label>
                    <Button Grid.Column="3" Margin="4">+</Button>
                    <Button Grid.Column="4" Margin="4">x</Button>
                </Grid>
                <Grid Height="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition  Width="0.5*" />
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.ColumnSpan="5" Fill="AliceBlue" Stroke="Black"></Rectangle>
                    <Label Grid.Column="0">Wraps, 6st</Label>
                    <Label Grid.Column="1">470g</Label>
                    <Label Grid.Column="2">€2.50</Label>
                    <Button Grid.Column="3" Margin="4">+</Button>
                    <Button Grid.Column="4" Margin="4">x</Button>
                </Grid>
                <Grid Height="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition  Width="0.5*" />
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.ColumnSpan="5" Fill="AliceBlue" Stroke="Black"></Rectangle>
                    <Label Grid.Column="0">Appels, Los</Label>
                    <Label Grid.Column="1">per Kg</Label>
                    <Label Grid.Column="2">€2.50</Label>
                    <Button Grid.Column="3" Margin="4">+</Button>
                    <Button Grid.Column="4" Margin="4">x</Button>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        <Button x:Name="btnNieuwArtikel" FontSize="20" Content="Nieuw Artikel" Margin="10" Grid.Row="2" Grid.ColumnSpan="6" Click="btnNieuwArtikel_Click"></Button>
        <Button x:Name="btnWinkellijst" FontSize="20" Content="Naar Winkellijst" Margin="10" Grid.Row="3" Grid.ColumnSpan="6" Click="btnWinkellijst_Click"></Button>
    </Grid>
</Window>
