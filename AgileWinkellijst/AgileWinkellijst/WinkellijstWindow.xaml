<Window x:Class="AgileWinkellijst.WinkellijstWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgileWinkellijst"
        mc:Ignorable="d"
        Title="WinkellijstWindow" Height="600" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="68*" />
            <RowDefinition Height="78*" />
            <RowDefinition Height="139*" />
            <RowDefinition Height="95*" />
            <RowDefinition Height="115*" />
            <RowDefinition Height="74*" />
        </Grid.RowDefinitions>
        <Label x:Name="lblWinkellijst" Content="Artikels toevoegen aan Winkellijst" Grid.ColumnSpan="6" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Height="36" Margin="30,14,30,18" Width="332"/>

        <TextBox x:Name="tbAantal" Text="Aantal" Grid.Column="0" Grid.Row="1" FontSize="15" Margin="5,25,5,25"/>
        <ComboBox x:Name="cmbArtikellijst"  Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" FontSize="15" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Margin="10,23,50,23" VerticalAlignment="Center" Height="32">
            <ComboBoxItem IsSelected="True">Selecteer Artikel</ComboBoxItem>
            <ComboBoxItem>Wraps 6st</ComboBoxItem>
            <ComboBoxItem>Appels, Los</ComboBoxItem>
            <ComboBoxItem>Calve pindakaas</ComboBoxItem>
        </ComboBox>

        <Button x:Name="btnToevoegenAanWinkellijst" FontSize="14" Content="Toevoegen aan winkellijst" Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="3" Margin="20,20,10,20"/>
        <ScrollViewer Grid.Row="2" Margin="5" Grid.ColumnSpan="6" Grid.RowSpan="3" >
            <StackPanel>
                <Grid Height="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="27*"/>
                        <ColumnDefinition Width="201*"/>
                        <ColumnDefinition Width="46*" />
                        <ColumnDefinition Width="45*" />
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition  Width="23*" />
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.ColumnSpan="6" Fill="AliceBlue" Stroke="Black"></Rectangle>
                    <Label Grid.Column="0" Content="1"/>
                    <Label Grid.Column="1">Calve Pindakaas</Label>
                    <Label Grid.Column="2">500g</Label>
                    <Label Grid.Column="3">€3.50</Label>
                    <Button Grid.Column="4" Margin="4">+</Button>
                    <Button Grid.Column="5" Margin="4">x</Button>
                </Grid>
                <Grid Height="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="27*"/>
                        <ColumnDefinition Width="201*"/>
                        <ColumnDefinition Width="46*" />
                        <ColumnDefinition Width="45*" />
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition  Width="23*" />
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.ColumnSpan="6" Fill="AliceBlue" Stroke="Black"></Rectangle>
                    <Label Grid.Column="0" Content="3"/>
                    <Label Grid.Column="1">Wraps 6 st</Label>
                    <Label Grid.Column="2">740g</Label>
                    <Label Grid.Column="3">€10.50</Label>
                    <Button Grid.Column="4" Margin="4">+</Button>
                    <Button Grid.Column="5" Margin="4">x</Button>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <Button x:Name="btnTerugNaarArtikellijst" Content="Terug naar Artikellijst" Grid.Row="5" Grid.ColumnSpan="6" Margin="10" FontSize="20" Click="btnTerugNaarArtikellijst_Click" />
    </Grid>
</Window>
