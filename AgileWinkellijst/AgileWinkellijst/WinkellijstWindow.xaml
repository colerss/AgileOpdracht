<Window x:Class="AgileWinkellijst.WinkellijstWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgileWinkellijst"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="WinkellijstWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
           
            <RowDefinition Height="7*" />
        </Grid.RowDefinitions>
        <Rectangle Stroke="Black" StrokeThickness="0.5" Grid.Row="0" Grid.ColumnSpan="2"></Rectangle>
        <Rectangle Stroke="Black" StrokeThickness="0.5" Grid.Row="1" Grid.ColumnSpan="2"></Rectangle>
        <Rectangle Stroke="Black" StrokeThickness="0.5" Grid.Row="2" Grid.ColumnSpan="2"></Rectangle>
        <Label x:Name="lblWinkellijst" Content="Winkellijst" Grid.ColumnSpan="2" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"  FontFamily="Candara Light" FontStyle="Italic"/>
        <StackPanel  Orientation="Horizontal" Grid.Row="1" >
            <Button  Style="{StaticResource MaterialDesignRaisedButton}" x:Name="btnTerugNaarArtikellijst" Content="Naar Artikellijst"  Margin="10" FontSize="18" Click="btnTerugNaarArtikellijst_Click" />
            <Button  Style="{StaticResource MaterialDesignRaisedButton}" x:Name="btnNieuwArtikel" Content="Nieuw Artikel"  Margin="10" FontSize="18" />

        </StackPanel>
        <StackPanel HorizontalAlignment="Right"  Orientation="Horizontal" Grid.Row="1" Grid.Column="1" >
            <Label VerticalContentAlignment="Center" FontSize="22">Totaal Prijs</Label>
            <TextBox  Margin="10" MinWidth="200"     Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"  ></TextBox>
        </StackPanel>
        
        
       
       
        <ScrollViewer Grid.Row="3" Margin="5" Grid.ColumnSpan="3" >
            <StackPanel>
                <Grid Height="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition  Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.ColumnSpan="6" Fill="AliceBlue" Stroke="Black"></Rectangle>
                    <Label Grid.Column="0" Content="1"/>
                    <Label Grid.Column="1">Calve Pindakaas 500g</Label>
                    <Label Grid.Column="2">€3.50</Label>
                    <Label Grid.Column="3">€3.50</Label>
                    <Button Grid.Column="4" Margin="5,4,3.6,5" FontSize="10" Padding="0" Height="Auto" >+</Button>
                    <Button Grid.Column="5"  Margin="5.4,4,3.2,5" FontSize="10" Padding="0"  Height="Auto">x</Button>
                </Grid>
                <Grid Height="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition  Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.ColumnSpan="6" Fill="AliceBlue" Stroke="Black"></Rectangle>
                    <Label Grid.Column="0" Content="3"/>
                    <Label Grid.Column="1">Wraps 6 st, 470g</Label>
                    <Label Grid.Column="2">€10.50</Label>
                    <Label Grid.Column="3">€31.50</Label>
                    <Button Grid.Column="4" Margin="5,4,3.6,5" FontSize="10" Padding="0" Height="Auto" >+</Button>
                    <Button Grid.Column="5"  Margin="5.4,4,3.2,5" FontSize="10" Padding="0"  Height="Auto">x</Button>
                </Grid>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>
