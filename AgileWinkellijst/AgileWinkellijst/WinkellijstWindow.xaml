<Window x:Class="AgileWinkellijst.WinkellijstWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Background="WhiteSmoke"
        xmlns:local="clr-namespace:AgileWinkellijst"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="WinkellijstWindow" Height="600" Width="400" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Label x:Name="lblWinkellijst" Content="Artikels toevoegen aan Winkellijst" Grid.ColumnSpan="6" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Height="36" Margin="30,14,30,18" Width="332" FontFamily="Candara Light" FontStyle="Italic"/>

        <TextBox  materialDesign:HintAssist.Hint="Aantal" Style="{StaticResource MaterialDesignFloatingHintTextBox}" x:Name="tbAantal" Grid.Column="0" Grid.Row="1" FontSize="15" HorizontalAlignment="Stretch" Margin="5,10.8,5.4,335" VerticalAlignment="Center" Height="43" Grid.RowSpan="2" RenderTransformOrigin="0.486,-0.107"/>
        <ComboBox materialDesign:HintAssist.Hint="Artikel" x:Name="cmbArtikellijst"  Grid.Column="1" Padding="5" Grid.Row="1" FontSize="15" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" Margin="5" VerticalAlignment="Center" Height="32">
            <ComboBoxItem>Wraps 6st</ComboBoxItem>
            <ComboBoxItem>Appels, Los</ComboBoxItem>
            <ComboBoxItem>Calve pindakaas</ComboBoxItem>
        </ComboBox>

        <Button  Style="{StaticResource MaterialDesignRaisedButton}" x:Name="btnToevoegenAanWinkellijst" FontSize="14" Padding="5" Content="Toevoegen" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5"/>
        <ScrollViewer Grid.Row="2" Margin="5" Grid.ColumnSpan="3" >
            <StackPanel x:Name="spWinkellijst">
                
            </StackPanel>
        </ScrollViewer>
        <Label Content="Subtotaal: " Grid.Row="3" Grid.Column="1"  VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="18"/>
        <TextBox IsEnabled="false" Text="€3.50" Grid.Row="3" Grid.Column="2" Margin="10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="17"/>
        <Button  Style="{StaticResource MaterialDesignRaisedButton}" x:Name="btnTerugNaarArtikellijst" Content="Terug naar Artikellijst" Grid.Row="4" Grid.ColumnSpan="3" Margin="10" FontSize="18" Click="btnTerugNaarArtikellijst_Click" />
    </Grid>
</Window>
