<Window x:Class="AgileWinkellijst.WinkellijstToevoegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgileWinkellijst"
        mc:Ignorable="d"
        Title="WinkellijstToevoegen" Height="150" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="Naam winkellijst : " Grid.Row="0" Grid.Column="0" Margin="5,5,69.8,4.6" FontSize="15" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="txtNaam" Grid.Row="0" Margin="132,5,4.6,4.6" FontSize="15" BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2"/>
        <Button x:Name="btnAanmaken" Content="Aanmaken" Margin="5" Click="btnAanmaken_Click" Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="btnTerugNaarWinkellijst" Content="Terug naar winkellijst" Margin="5" Click="btnTerugNaarWinkellijst_Click" Grid.Column="0" Grid.Row="1"/>
    </Grid>
</Window>
